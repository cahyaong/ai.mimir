<?xml version="1.0" encoding="utf-8" ?>
<!--  TODO (SHOULD): Fix issue causing label not filling scroll-view, potentially MAUI bug?  -->
<ResourceDictionary
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:self="using:nGratis.AI.Mimir.Client.Maui">
  <Style TargetType="{x:Type self:AweArticleVisualizer}">
    <Setter Property="ControlTemplate">
      <Setter.Value>
        <ControlTemplate>
          <ScrollView>
            <Label
              FormattedText="{TemplateBinding FormattedText}"
              HorizontalOptions="Fill" />
          </ScrollView>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>